<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="TOP_CENTER" hgap="8" prefHeight="100.0" prefWidth="300.0" vgap="4" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AuthController">

    <HBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
        <Label text="Логин:">
         <padding>
            <Insets right="15.0" />
         </padding>
        </Label>
        <TextField fx:id="tfLogin" HBox.hgrow="ALWAYS" text="lantsev"/>
    </HBox>

    <HBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
        <Label text="Пароль:">
         <padding>
            <Insets right="8.0" />
         </padding>
        </Label>
        <PasswordField fx:id="pfPassword" HBox.hgrow="ALWAYS" text="123"/>
    </HBox>
    <Label fx:id="lMsg" text="Неверный логин или пароль" GridPane.rowIndex="2" visible="false"/>
    <ButtonBar GridPane.hgrow="ALWAYS" GridPane.rowIndex="3">
        <buttons>
            <Button fx:id="btnOk">Ок</Button>
            <Button fx:id="btnСancel">Отмена</Button>
        </buttons>
    </ButtonBar>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</GridPane>
